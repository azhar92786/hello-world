<h1>Book Categories</h1>

<table>
  <thead>
    <tr>
      <th>Book</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @book_categories.each do |book_category| %>
      <tr>
        <td><%= link_to book_category.book.title, book_category.book  %></td>
        <td><%= link_to book_category.category.name, book_category.category %></td>
        <td><%= link_to 'Show', book_category %></td>
        <td><%= link_to 'Edit', edit_book_category_path(book_category) %></td>
        <td><%= link_to 'Destroy', book_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book Category', new_book_category_path %>
