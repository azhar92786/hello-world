<div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body"> 
    
      <div class="container text-center">
      <p>
        <strong>Title:</strong>
        <%= @book.title %>
      </p>
  
      <p>
        <strong>Description::</strong>
        <%= @book.description %>
      </p>
  
      <p>
        <strong>Image:</strong>
          <%= image_tag @book.image.url %>
      </p>
  
      <p>
        <strong>Borrower:</strong>
        <%= @book.borrower %>
      </p>
  
  
      <%= link_to 'Edit', edit_book_path(@book) %> 
      <%= link_to 'Back', books_path %>
      <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  
      <%= render 'bookcomments', book: @book %>
  
  </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Create book</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>