<table>
<h2>Book by categories</h2>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Borrower</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= image_tag book.image.thumb.url %></td>
        <td><%= book.borrower%></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>