
<% if user_signed_in? %>
  curl -X GET --header 'Authorization: Bearer <%= JWTWrapper.encode({ user_id: current_user.id }) %>' 'http://localhost:3000/api/v1/yada_ya'
<% end %>

<h2>Filter by categories</h2>
<% if false %> 
    <ul>
      <% @categories.each do |category| %>
        <li>
          <%= link_to category.name, book_book_by_category_path(category)%>  
        </li>
      <% end %>
    </ul>

    <%= select("book_book_by_category", "category_id", @categories) %>
 <% end %>

 <%= form_tag(books_path, method: "get") do %>
  <%= label_tag(:q, "Filter books by:") %>
  <%= select("category", "category_id", @categories) %>
  <%= submit_tag("Filter") %>
 <% end %>

 <h2>Search</h2>
 <%= form_tag(books_path, method: "get") do %>
  <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag :search %>
  <%= submit_tag("search") %>
 <% end %>

<h2>List of all books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Borrower</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= image_tag book.image.thumb.url %></td>
        <td><%= book.borrower%></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to "Borrow", book_borrow_path(book), method: :patch if !book.borrower %></td>
        <td><%= button_to "Return", book_borrow_path(book), method: :patch if book.borrower == current_user.email%></td>
        <td><%= button_to "Enquire with borrower", book_email_query_path(book), method: :get if (book.borrower != current_user.email) && (book.borrower != nil)%></td>        </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books %>


<%= link_to 'New Book', new_book_path %>
