

<h1>Spoon library</h1> <br><br>

<table>
<h2>search by book categories</h2>

    <tbody>
    <% @book_categories.each do |bookcategory| %>
      <tr>
        <%= link_to bookcategory.category.name , book_book_by_category_path(bookcategory.book)%>
        <br>
      </tr>
    <% end %>
    </tbody>


</table>

<table>
<h2>List of all books</h2>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Borrower</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= image_tag book.image.thumb.url %></td>
        <td><%= book.borrower%></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


