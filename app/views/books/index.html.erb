<table>
<h2>search by book categories</h2>
    <tbody>
    <% @Categories.each do |category| %>
      <tr>
        <%= link_to category.name , book_book_by_category_path(category)%>
        <br>
      </tr>
    <% end %>
      <tr>
        <%= link_to 'All' , books_path%>
      </tr>
    </tbody>
</table>

<table>
<h2>List of all books</h2>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Borrower</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= image_tag book.image.thumb.url %></td>
        <td><%= book.borrower%></td>
        <td><%= book.category_id%></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        

        </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @books, previous_label: h("<"), next_label: h(">") %>


<br>


